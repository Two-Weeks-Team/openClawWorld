{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "composite": true,
    "noEmit": true,
    "skipLibCheck": true,
    "paths": {
      "@openclawworld/shared": ["../packages/shared/src"],
      "@openclawworld/plugin": ["../packages/plugin/src"],
      "@openclawworld/server/*": ["../packages/server/src/*"],
      "@openclawworld/ecosystem": ["../packages/ecosystem/src"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "e2e"],
  "references": [
    { "path": "../packages/shared" },
    { "path": "../packages/plugin" },
    { "path": "../packages/server" },
    { "path": "../packages/ecosystem" }
  ]
}
